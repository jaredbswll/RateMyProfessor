<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/searchByProfessor"
        android:layout_width="360sp"
        android:layout_height="150sp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginRight="148dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="81dp"
        android:background="#005bbb"
        android:text="@string/profSearch"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:onClick="profSearch"
        app:layout_constraintBottom_toTopOf="@+id/searchByClass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchByClass"
        android:layout_width="360sp"
        android:layout_height="150sp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginRight="148dp"
        android:layout_marginStart="148dp"
        android:background="#005bbb"
        android:text="@string/classSearch"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:onClick="classSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchByProfessor" />
</android.support.constraint.ConstraintLayout>